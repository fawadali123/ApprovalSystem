@model ApprovalSystem.Models.ApprovalHierarchyDetail

@{
    ViewData["Title"] = "Create";
}

<h1>Add User</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ApprovalHierarchyId" class="control-label"></label>
