@model IEnumerable<ApprovalSystem.Models.ApprovalHierarchyDetail>

@{
    ViewData["Title"] = "Index";
}

<h1>Hierarchy User</h1>

<table class="table table-responsive">
    <thead>
        <tr>
            <th>Hierarchy</th>
            <th>Sequence</th>
            <th>User</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ApprovalHierarchy.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sequence)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.UserName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
            </td>
        </tr>
}
    </tbody>
</table>
